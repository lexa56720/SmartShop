<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartShop.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar-light bg-white border-bottom box-shadow mb-3" style="min-height:50px">
            <div class="d-flex justify-content-between">
                <a class="navbar-brand" style="font-size:xx-large" asp-area="" asp-controller="Home" asp-action="Index">SmartShop</a>
                @if (ViewBag.IsHeaderDisabled == null || ViewBag.IsHeaderDisabled == false)
                {
                    <div class="d-flex flex-column" style="margin:10px;">
                        @if (ViewBag.User != null)
                        {
                            <div>
                                <a class="text-dark"  style="font-size:large; display:grid; justify-content: end" asp-area="" asp-controller="Profile" asp-action="Index">@ViewBag.User.Name</a>
                            </div>

                            <div>
                                <a href="#" style="display:grid; justify-content: end" onclick="LogOut();return false;">Выйти</a>
                            </div>
                        }
                        else
                        {
                            <a style="padding:10px" asp-area="" asp-controller="Auth" asp-action="Login">Войти</a>
                        }
                    </div>
                }
            </div>


        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SmartShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
