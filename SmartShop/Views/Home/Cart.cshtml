@{
    ViewData["Title"] = "Cart";
    Smartphone[] smartphones = ViewBag.CartContent;
}

<div class="container mt-4">
    <h2>Your Cart:</h2>
    @if (smartphones != null && smartphones.Length > 0)
    {
        @for (var i = 0; i < smartphones.Length; i++)
        {
            var smartphone = smartphones[i];
            <div class="card mb-3 position-relative" id="card item @i">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        <a href="/Catalog/Product?id=@smartphone.Id">
                            <img src="@smartphone.Medias.First().Url" class="card-img" alt="@smartphone.Name">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@smartphone.Name</h5>
                            <p class="card-text">@smartphone.Description</p>
                            <p class="card-text"><small class="text-muted">Price: $@smartphone.Price</small></p>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-sm delete-btn" onclick="RemoveFromCart(@i);RemoveFromCartPage('card item @i','@smartphone.Price');">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
        <div class="text-right">
            <h4 id="TotalPrice">Total Price: $@(smartphones.Sum(s => s.Price))</h4>
            <button class="btn btn-primary">Buy Now</button>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
    }
</div>

<script>
    function RemoveFromCartPage(id, price) {
        document.getElementById(id).outerHTML = "";
        var totalPrice = document.getElementById('TotalPrice');

        var searchIndex = totalPrice.innerText.indexOf("$");
        var strOut = totalPrice.innerText.substring(searchIndex + 1); //this is where the magic happens :)

        totalPrice.innerText = "Total price: $" + (strOut - price);
    }
</script>
