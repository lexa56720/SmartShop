@using SmartShop.DataBase.Tables
@{
    ViewData["Title"] = "Home Page";
}
<div  >
    @foreach (Smartphone smartphone in ViewBag.Smartphones)
    {
        <div style="display:grid; padding:20px; justify-content:stretch; ">
            <div class="wrapper">
                <div style="grid-row:span 2">
                    <img width="100" height="100" src="@smartphone.Medias.First().Url" />
                </div>
                <div>
                    <a href="Catalog/Product?id=@smartphone.Id"> @smartphone.Name</a>
                </div>
                <div>@smartphone.Description</div>
            </div>
        </div>
    }

</div>




<style type="text/css">
    .wrapper {
        display: grid;
        grid-template-columns: auto 70%;
        grid-template-rows: auto auto;
        justify-content: center;
        gap: 20px;
        width: auto;
        background-color: #f9f9f9
    }
</style>